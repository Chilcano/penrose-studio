<installation version="1.0">
	<info>
		<appname>Penrose Studio</appname>
		<appversion>${project.version}</appversion>
		<appsubpath>Penrose Studio</appsubpath>
		<url>http://penrose.safehaus.org</url>
		<authors>
			<author name="Identyx Corporation"
				email="info@identyx.com"/>
		</authors>
		<javaversion>1.4</javaversion>
	</info>
	<variables>
		<!--
		<variable name="" value=""/>
		-->
	</variables>
	<guiprefs resizable="no" width="800" height="600">
		<laf name="metouia">
			<os family="unix"/>
		</laf>
		<laf name="looks">
			<os family="windows"/>
			<param name="variant" value="extwin"/>
		</laf>
	</guiprefs>
	<locale>
		<langpack iso3="eng"/>
	</locale>
	<resources>
		<res id="LicencePanel.licence" src="LICENSE.txt"/>
		<res id="shortcutSpec.xml" src="shortcuts-win32.xml"/>
		<res id="Unix_shortcutSpec.xml" src="shortcuts-unix.xml"/>
	</resources>
	<panels>
		<!--
		<panel classname="HelloPanel"/>
		-->
		<panel classname="LicencePanel"/>
		<panel classname="TargetPanel"/>
		<panel classname="PacksPanel"/>
		<panel classname="InstallPanel"/>
		<panel classname="ShortcutPanel"/>
		<panel classname="SimpleFinishPanel"/>
	</panels>
	<packs>
		<pack name="Penrose Studio Executables"
			required="yes"
			preselected="yes">
			<description>Penrose Studio Executables</description>
			<file targetdir="$INSTALL_PATH" src="."/>
			<executable targetfile="$INSTALL_PATH/penrose-studio" stage="never"/>
		</pack>
	</packs>
	<native type="izpack" name="ShellLink.dll"/>
</installation>