<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

    <extension point="org.eclipse.ui.views">
        <category name="Penrose Studio" id="penrose-studio"/>
        <view
            allowMultiple="false"
            class="org.safehaus.penrose.studio.server.ServersView"
            category="penrose-studio"
            name="Servers"
            icon="${images.logo}"
            id="org.safehaus.penrose.studio.server.ServersView"/>
        <view
            allowMultiple="false"
            class="org.safehaus.penrose.studio.validation.ValidationView"
            category="penrose-studio"
            name="Validation"
            icon="${images.validation}"
            id="org.safehaus.penrose.studio.validation.ValidationView"/>
        <view
            allowMultiple="false"
            class="org.safehaus.penrose.studio.views.ProjectInfoView"
            category="penrose-studio"
            name="Project"
            icon="${images.logo}"
            id="org.safehaus.penrose.studio.views.ProjectInfoView"/>
        <view
            allowMultiple="false"
            class="org.safehaus.penrose.studio.console.ConsoleView"
            category="penrose-studio"
            name="Console"
            icon="${images.console}"
            id="org.safehaus.penrose.studio.console.ConsoleView"/>
    </extension>

    <extension point="org.eclipse.ui.editors">
        <editor
            id="org.safehaus.penrose.studio.welcome.WelcomeEditor"
            name="Welcome"
            icon="${images.logo}"
            class="org.safehaus.penrose.studio.welcome.WelcomeEditor"/>
        <editor
            id="org.safehaus.penrose.studio.partition.editor.PartitionEditor"
            name="Partition"
            icon="${images.partition}"
            class="org.safehaus.penrose.studio.partition.editor.PartitionEditor"/>
        <editor
            id="org.safehaus.penrose.studio.connection.editor.ConnectionEditor"
            name="Connection"
            icon="${images.connection}"
            class="org.safehaus.penrose.studio.connection.editor.ConnectionEditor"/>
        <editor
            id="org.safehaus.penrose.studio.jdbc.connection.editor.JDBCConnectionEditor"
            name="JDBC Connection"
            icon="${images.connection}"
            class="org.safehaus.penrose.studio.jdbc.connection.editor.JDBCConnectionEditor"/>
        <editor
            id="org.safehaus.penrose.studio.ldap.connection.editor.LDAPConnectionEditor"
            name="LDAP Connection"
            icon="${images.connection}"
            class="org.safehaus.penrose.studio.ldap.connection.editor.LDAPConnectionEditor"/>
        <editor
            id="org.safehaus.penrose.studio.nis.connection.editor.NISConnectionEditor"
            name="NIS Connection"
            icon="${images.connection}"
            class="org.safehaus.penrose.studio.nis.connection.editor.NISConnectionEditor"/>
        <editor
            id="org.safehaus.penrose.studio.source.editor.SourceEditor"
            name="Source"
            icon="${images.source}"
            class="org.safehaus.penrose.studio.source.editor.SourceEditor"/>
        <editor
            id="org.safehaus.penrose.studio.jdbc.source.editor.JDBCSourceEditor"
            name="JDBC Source"
            icon="${images.source}"
            class="org.safehaus.penrose.studio.jdbc.source.editor.JDBCSourceEditor"/>
        <editor
            id="org.safehaus.penrose.studio.ldap.source.editor.LDAPSourceEditor"
            name="JNDI Source"
            icon="${images.source}"
            class="org.safehaus.penrose.studio.ldap.source.editor.LDAPSourceEditor"/>
        <editor
            id="org.safehaus.penrose.studio.nis.source.editor.NISSourceEditor"
            name="NIS Source"
            icon="${images.source}"
            class="org.safehaus.penrose.studio.nis.source.editor.NISSourceEditor"/>
        <editor
            id="org.safehaus.penrose.studio.mapping.editor.MappingEditor"
            name="Mapping"
            icon="${images.mapping}"
            class="org.safehaus.penrose.studio.mapping.editor.MappingEditor"/>
        <editor
            id="org.safehaus.penrose.studio.directory.editor.EntryEditor"
            name="Entry"
            icon="${images.logo}"
            class="org.safehaus.penrose.studio.directory.editor.EntryEditor"/>
        <editor
            id="org.safehaus.penrose.studio.browser.editor.BrowserEditor"
            name="Browser"
            icon="${images.browser}"
            class="org.safehaus.penrose.studio.browser.editor.BrowserEditor"/>

        <!-- Modules  -->
        <editor
            id="org.safehaus.penrose.studio.module.editor.ModuleEditor"
            name="Module"
            icon="${images.module}"
            class="org.safehaus.penrose.studio.module.editor.ModuleEditor"/>

        <!-- Schemas -->
        <editor
            id="org.safehaus.penrose.studio.schema.editor.SchemaEditor"
            name="Schema"
            icon="${images.schema}"
            class="org.safehaus.penrose.studio.schema.editor.SchemaEditor"/>
        <editor
            id="org.safehaus.penrose.studio.schema.editor.ObjectClassEditor"
            name="Object Class"
            icon="${images.object_class}"
            class="org.safehaus.penrose.studio.schema.editor.ObjectClassEditor"/>
        <editor
            id="org.safehaus.penrose.studio.schema.editor.AttributeTypeEditor"
            name="Attribute Type"
            icon="${images.attribute_type}"
            class="org.safehaus.penrose.studio.schema.editor.AttributeTypeEditor"/>

        <!-- Services -->
        <editor
            id="org.safehaus.penrose.studio.service.editor.ServiceEditor"
            name="Service"
            icon="${images.service}"
            class="org.safehaus.penrose.studio.service.editor.ServiceEditor"/>

        <!-- Logs -->
        <editor
            id="org.safehaus.penrose.studio.log.editor.AppenderEditor"
            name="Appender"
            icon="${images.appender}"
            class="org.safehaus.penrose.studio.log.editor.AppenderEditor"/>
        <editor
            id="org.safehaus.penrose.studio.log.editor.RootLoggerEditor"
            name="Root Logger"
            icon="${images.logger}"
            class="org.safehaus.penrose.studio.log.editor.RootLoggerEditor"/>
        <editor
            id="org.safehaus.penrose.studio.log.editor.LoggerEditor"
            name="Logger"
            icon="${images.logger}"
            class="org.safehaus.penrose.studio.log.editor.LoggerEditor"/>

        <!-- Administrator -->
        <editor
            id="org.safehaus.penrose.studio.user.editor.UserEditor"
            name="User"
            icon="${images.administrator}"
            class="org.safehaus.penrose.studio.user.editor.UserEditor"/>

        <!-- System Properties  -->
        <editor
            id="org.safehaus.penrose.studio.properties.editor.SystemPropertiesEditor"
            name="System Properties"
            icon="${images.system_properties}"
            class="org.safehaus.penrose.studio.properties.editor.SystemPropertiesEditor"/>

        <!-- Federation -->
        <editor
            id="org.safehaus.penrose.studio.federation.editor.FederationEditor"
            name="Federation"
            icon="${images.object}"
            class="org.safehaus.penrose.studio.federation.editor.FederationEditor"/>
        <editor
            id="org.safehaus.penrose.studio.federation.partition.FederationDomainEditor"
            name="Global Repository"
            icon="${images.object}"
            class="org.safehaus.penrose.studio.federation.partition.FederationDomainEditor"/>
        <editor
            id="org.safehaus.penrose.studio.federation.global.ConflictDetectionEditor"
            name="Conflict Detection"
            icon="${images.object}"
            class="org.safehaus.penrose.studio.federation.global.ConflictDetectionEditor"/>
        <editor
            id="org.safehaus.penrose.studio.federation.ldap.editor.LDAPEditor"
            name="LDAP"
            icon="${images.object}"
            class="org.safehaus.penrose.studio.federation.ldap.editor.LDAPEditor"/>
        <editor
            id="org.safehaus.penrose.studio.federation.ldap.repository.LDAPRepositoryEditor"
            name="LDAP Repository"
            icon="${images.object}"
            class="org.safehaus.penrose.studio.federation.ldap.repository.LDAPRepositoryEditor"/>
        <editor
            id="org.safehaus.penrose.studio.federation.linking.editor.IdentityLinkingEditor"
            name="Identity Linking"
            icon="${images.object}"
            class="org.safehaus.penrose.studio.federation.linking.editor.IdentityLinkingEditor"/>
        <editor
            id="org.safehaus.penrose.studio.federation.nis.editor.NISEditor"
            name="NIS"
            icon="${images.object}"
            class="org.safehaus.penrose.studio.federation.nis.editor.NISEditor"/>
        <editor
            id="org.safehaus.penrose.studio.federation.nis.domain.NISDomainEditor"
            name="NIS Domain"
            icon="${images.object}"
            class="org.safehaus.penrose.studio.federation.nis.domain.NISDomainEditor"/>
        <editor
            id="org.safehaus.penrose.studio.federation.nis.synchronization.NISSynchronizationEditor"
            name="Synchronization"
            icon="${images.object}"
            class="org.safehaus.penrose.studio.federation.nis.synchronization.NISSynchronizationEditor"/>
        <editor
            id="org.safehaus.penrose.studio.federation.nis.ownership.OwnershipAlignmentEditor"
            name="Ownership Alignment"
            icon="${images.object}"
            class="org.safehaus.penrose.studio.federation.nis.ownership.OwnershipAlignmentEditor"/>
        <editor
            id="org.safehaus.penrose.studio.federation.nis.ownership.NISFilesEditor"
            name="NIS Alignment Tool"
            icon="${images.object}"
            class="org.safehaus.penrose.studio.federation.nis.ownership.NISFilesEditor"/>
    </extension>

    <extension point="org.eclipse.ui.perspectives">
        <perspective
            class="org.safehaus.penrose.studio.PenroseStudioPerspective"
            fixed="false"
            name="Penrose Studio"
            id="org.safehaus.penrose.studio.PenroseStudioPerspective"/>
    </extension>

    <extension point="org.eclipse.core.runtime.applications" id="application">
        <application>
            <run class="org.safehaus.penrose.studio.PenroseStudio"/>
        </application>
    </extension>

    <extension point="org.eclipse.core.runtime.products" id="product">
        <product
            name="Penrose Studio"
            application="org.safehaus.penrose.studio.application">
            <property
                name="windowImages"
                value="${images.logo16},${images.logo32}"/>
            <property
                name="preferenceCustomization"
                value="plugin_customization.ini"/>
        </product>
    </extension>

</plugin>
